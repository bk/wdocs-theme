<%inherit file="../base.mhtml" />

<%block name="content">
  <div class="col-md-3"></div>
  <div class="col-md-9" role="main">
    <h1 class="title">${ _("Search") }</h1>
    <hr>
    % if site.lunr_search:
    <div class="search-container">
        <form id="searchform" action="/search/" method="GET">
          <div class="row">
            <div class="col-12 col-sm-9">
              <input id="searchfield" class="form-control" type="search" name="q" placeholder="${ _("Search") } &#x1F50D;">
            </div>
            <div class="col-12 col-sm-3">
              <input type="submit" value="Search" class="btn btn-primary">
            </div>
          </div>
        </form>
       <div class="search-results mt-4" id="results">${ _("You need Javascript for the search functionality.") }</div>
    </div>
    % else:
    <p class="alert alert-danger">${ _("Search is not active on this site. This page does nothing.") }</p>
    % endif
  </div>
</%block>

<%block name="scripts">
${ parent.scripts() }
% if site.lunr_search:
<script src="${ 'js/lunr.js' | url }"></script>
<script src="${ 'js/search.js' | url }"></script>
<script>
 window.lunr_base_url = "${ site.leading_path or site.base_url or '/' }";
 do_search();
</script>
% endif
</%block>
